packages:
    -- Phase 1: Core types (Jan-Feb)
    fhir-types

    -- Phase 2: Validation engine (Mar-Apr)
    fhir-validation

-- Use GHC 9.6+
with-compiler: ghc-9.6

-- Common build settings
package *
    ghc-options: -Wall -Wcompat -Widentities -Wincomplete-record-updates
                 -Wincomplete-uni-patterns -Wpartial-fields -Wredundant-constraints

-- Test settings
test-show-details: direct

-- Allow newer versions for flexibility during development
allow-newer: all
